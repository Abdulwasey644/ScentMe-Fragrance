<main id="main" class="main">

  <div class="pagetitle">
    <h1>FAQ</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">FAQ</li>
      </ol>
      {{#if message }}
      <div class="alert alert-{{{" message type"}}} alert-dismissible fade show" role="alert">
        {{message}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      {{/if}}
    </nav>
  </div><!-- End Page Title -->

  <section class="section dashboard">.
    <div class="row">

      <!-- Left side columns -->
      <div class="col-12">
        <div class="row">

          <div class="col-xxl-4 col-xl-12">
            <div class="card info-card card-body p-4">
              <h2 class="theme text-center px-3 py-2 mb-2" style="font-weight: bold;">Add Question.</h2>
              <hr class="divider">
              <form action="/faq" method="post" >
                <div class="question d-flex justify-content-between my-2">
                  <div>
                    <label style="font-weight:bold;" for="question">Add Question :</label>
                  </div>
                  <div>
                    <input class="form-control" style="width:50vw;" type="text" name="question" id="question">
                  </div>
                </div>
                <div class="answer d-flex justify-content-between my-2">
                  <div>
                    <label style="font-weight:bold;" for="answer">Add Answer :</label>
                  </div>
                  <div>
                    <input class="form-control" style="width:50vw;" type="text" name="answer" id="answer">
                  </div>
                </div>
                <div class="text-center">
                  <button class="btn btn-success" style="width: 16vw;" type="submit" id="submit">Add</button>
                </div>
              </form>
            </div>
          </div>
  </section>
  <section class="section">.
    <div class="row">

      <!-- Left side columns -->
      <div class="col-12">
        <div class="row">

          <div class="col-xxl-4 col-xl-12">
            <div class="card info-card card-body p-4">
              <h2 class="theme text-center px-3 py-2 mb-2" style="font-weight: bold;">Question Added.</h2>
              <hr class="divider">
              {{#if faqs}}
                {{#each faqs}}
                  <div id="block-{{{index}}}">
                    <div class="question d-flex justify-content-between my-2">
                      <div>
                        <p style="font-weight:bold;">Question # {{{index}}}:</label>
                      </div>
                      <div>
                        <p class="form-control" style="width:50vw;">{{{question}}}</p>
                      </div>
                    </div>
                    <div class="answer d-flex justify-content-between my-2">
                      <div>
                        <p style="font-weight:bold;">Answer # {{{index}}}:</label>
                      </div>
                      <div>
                        <p class="form-control" style="width:50vw;">{{{answer}}}</p>
                      </div>
                    </div>
                  </div>
                {{/each}}
              {{else}}
                <p class="text-danger text-center">No Question Found...!</p>
              {{/if}}
            </div>
          </div>
  </section>

</main><!-- End #main -->