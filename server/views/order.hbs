<main id="main" class="main">

  <div class="pagetitle">
    <h1>Orders</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Order</a></li>
        <li class="breadcrumb-item active">List</li>
      </ol>
      {{#if message }}
      <div class="alert alert-{{{" message type"}}} alert-dismissible fade show" role="alert">
        {{message}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      {{/if}}
    </nav>
  </div><!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">

      <!-- Left side columns -->
      <div class="col-12">
        <div class="row">

          <div class="col-xxl-4 col-xl-12">
            <div class="card info-card card-body p-4">
              <h2 class="theme text-center px-3 py-2 mb-2" style="font-weight: bold;">Orders List</h2>
              <hr class="divider">
              <!-- Table with stripped rows -->
              {{#if items}}
              {{!-- .search-table-outter { overflow-x: scroll; } --}}
              {{!-- th, td { min-width: 200px; } --}}
              <div style="overflow-x: scroll;">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th class="text-center px-3 py-2">#</th>
                      <th class="text-center px-3 py-2">Transaction id</th>
                      <th class="text-center px-3 py-2">Customer name</th>
                      <th class="text-center px-3 py-2">Customer email</th>
                      <th class="text-center px-3 py-2">Delivery address</th>
                      <th class="text-center px-3 py-2">Product list</th>
                      <th class="text-center px-3 py-2">Amount to be paid</th>
                      <th class="text-center px-3 py-2">Order placed on</th>
                      <th class="text-center px-3 py-2">Delivery date</th>
                      <th class="text-center px-3 py-2">Status</th>
                    </tr>
                  </thead>
                  <tbody style="max-height: 400px;">
                    {{#each items}}
                    <tr>
                      <th class="text-center px-3 py-2">{{{index}}}</th>
                      <td class="text-center px-3 py-2" style="min-width : 200px;">{{{transactionID}}}</td>
                      <td class="text-center px-3 py-2" style="min-width : 200px;">{{{user.name}}}</td>
                      <td class="text-center px-3 py-2" style="min-width : 200px;">{{{user.email}}}</td>
                      <td class="text-center px-3 py-2" style="min-width : 400px;">{{{user.address}}}</td>
                      <td class="text-center px-3 py-2" style="min-width : 200px;">{{{products}}}</td>
                      <td class="text-center px-3 py-2" style="min-width : 200px;">{{{amount}}}</td>
                      <td class="text-center px-3 py-2" style="min-width : 400px;">{{{"order date"}}}</td>
                      <td class="text-center px-3 py-2" style="min-width : 400px;">{{{"delivery date"}}}</td>
                      {{#if isDelivered}}
                      <td class="text-center px-3 py-2" style="min-width : 200px; color:green">Delivered</td>
                      {{else }}
                      <td class="text-center px-3 py-2" style="min-width : 200px; color:red">Pending</td>
                      {{/if}}
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>

              {{else }}
              <div class="container text-center px-3 py-2 text-danger">No result found...!</div>
              {{/if}}

              <!-- End Table with stripped rows -->
            </div>

          </div>
  </section>

</main><!-- End #main -->